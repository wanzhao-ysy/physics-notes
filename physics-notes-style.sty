\RequirePackage{xcolor}
\RequirePackage{amsmath,amsthm,bm}
\RequirePackage{amssymb,latexsym,textcomp,mathrsfs,euscript,yhmath}

% 物理专用宏包
\RequirePackage{siunitx}
